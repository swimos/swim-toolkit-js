{
  "name": "@swim/toolkit",
  "version": "4.0.0-dev.20210927.1",
  "description": "Swim Toolkit",
  "homepage": "https://github.com/swimos/swim",
  "author": "Chris Sachs <chris@swimos.org>",
  "license": "Apache-2.0",
  "repository": "https://github.com/swimos/swim.git",
  "private": true,
  "workspaces": [
    "../swim-runtime-js/swim-core-js/@swim/*",
    "../swim-runtime-js/swim-host-js/@swim/*",
    "../swim-runtime-js/@swim/*",
    "./swim-ui-js/@swim/*",
    "./swim-ux-js/@swim/*",
    "./swim-vis-js/@swim/*",
    "./swim-maps-js/@swim/*",
    "./@swim/*"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "13",
    "@types/arcgis-js-api": "4.21",
    "@types/eslint": "7",
    "@types/google.maps": "3",
    "@types/leaflet": "1.7",
    "@types/mapbox-gl": "2.4",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "eslint": "8",
    "rollup": "2.60",
    "rollup-plugin-sourcemaps": "0.6",
    "terser": "5",
    "tslib": "2",
    "typedoc": "0.22",
    "typescript": "4.4"
  },
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "npm run compileUtil && npm run compileCodec && npm run compileArgs && npm run compileBuild && npm run bundleBuild",
    "compileUtil": "cd ../swim-runtime-js/swim-core-js/@swim/util && tsc -p src/main",
    "compileCodec": "cd ../swim-runtime-js/swim-core-js/@swim/codec && tsc -p src/main",
    "compileArgs": "cd ../swim-runtime-js/swim-core-js/@swim/args && tsc -p src/main",
    "compileBuild": "cd ../swim-runtime-js/swim-core-js/@swim/build && tsc -p src/main",
    "bundleBuild": "cd ../swim-runtime-js/swim-core-js/@swim/build && rollup -c",
    "build": "./bin/build.js",
    "compile": "./bin/build.js compile",
    "test": "./bin/build.js compile --test",
    "doc": "./bin/build.js doc",
    "watch": "./bin/build.js watch",
    "clean": "./bin/build.js clean && cd ../swim-runtime-js/swim-core-js/@swim/build && npm run compile && npm run bundle",
    "help": "./bin/build.js help"
  }
}
